<!-- views/editPatient.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css" />
    <title>Edit Patient</title>
</head>
<body>
    <%- include('./partials/header') %>
    <%- include('./partials/nav', { activePage: 'patients' }) %>
    <main>
        <h1>Edit Patient Details</h1>
        <form action="/patients/edit/<%= patient.ID %>" method="POST" id="editForm">
            <label for="Name">Name:</label>
            <input type="text" name="Name" id="Name" value="<%= patient.Name %>" required><br>
    
            <label for="Age">Age:</label>
            <input type="number" name="Age" id="Age" value="<%= patient.Age %>" required><br>
    
            <label for="Address">Address:</label>
            <input type="text" name="Address" id="Address" value="<%= patient.Address %>" required><br>
    
            <button type="submit">Update Patient</button>
        </form>
    </main>
</body>
</html>
